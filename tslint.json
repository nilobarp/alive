{
  "extends": ["tslint:recommended"],
  "rules": {
    // "align": [false, "arguments", "parameters", "statements"],
    "array-type": [true, "array-simple"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "arrow-return-shorthand": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "eofline": true,
    "import-spacing": true,
    "indent": [true, "spaces", 2],
    "interface-name": [true, "never-prefix"],
    "linebreak-style": [true],
    "max-line-length": [true, 80],
    "newline-before-return": true,
    "new-parens": true,
    // "newline-per-chained-call": true,
    "no-boolean-literal-compare": true,
    "no-consecutive-blank-lines": false, // sometimes it is easier to read spaced out code
    "no-irregular-whitespace": true,
    "no-parameter-properties": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-qualifier": true,
    "number-literal-format": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-shorthand": [true],
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-finally",
      "check-whitespace"
    ],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-first"
      }
    ],
    "prefer-const": true,
    "prefer-method-signature": true,
    "prefer-switch": true,
    "prefer-template": [true, "allow-single-concat"],
    "quotemark": [true, "single"],
    "semicolon": [true, "always"],
    "space-before-function-paren": [true, "as-needed"],
    // "space-within-parens": [true, 1]
    "trailing-comma": [false, "always"],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "variable-name": [true, "ban-keywords"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-preblock",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  }
}
